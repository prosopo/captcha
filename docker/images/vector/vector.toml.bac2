[sources.docker_logs]
type = "docker_logs"

[transforms.add_env_var]
type = "remap"
inputs = ["docker_logs"]
source = '''
.host_id="${HOST_ID:-undefined}"
del(.container_created_at)
del(.container_id)
del(.host)
del(.image)
del(.label)
del(.source_type)
del(.stream)
del(.timestamp)
'''

[sinks.console]
type = "console"
inputs = ["add_env_var"]
encoding.codec = "json"
