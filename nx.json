{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"namedInputs": {
		"default": [
			"{projectRoot}/**",
			"!{projectRoot}/dist/**",
			"!{projectRoot}/node_modules/**",
			"!{projectRoot}/coverage/**"
		]
	},
	"namedOutputs": {
		"dist": ["{projectRoot}/dist"]
	},
	"targetDefaults": {
		"build": {
			"dependsOn": ["^build"],
			"cache": true
		},
		"build:cjs": {
			"dependsOn": ["^build:cjs"],
			"cache": true
		},
		"bundle": {
			"dependsOn": ["build"],
			"cache": true
		},
		"bundle:webpack": {
			"dependsOn": ["build:cjs"],
			"cache": true
		},
		"test": {
			"cache": true
		},
		"typecheck": {
			"dependsOn": ["^typecheck"],
			"cache": true
		},
		"build:tsc": {
			"dependsOn": ["^build:tsc"],
			"cache": true
		},
		"lint": {
			"cache": true
		},
		"clean": {
			"cache": false
		},
		"clean:deps": {
			"cache": false,
			"dependsOn": ["clean", "^clean"]
		}
	},
	"defaultBase": "main",
	"release": {
		"projects": ["*"],
		"versionPlans": true,
		"projectsRelationship": "independent",
		"changelog": {
			"projectChangelogs": true,
			"automaticFromRef": true
		}
	},
	"parallel": 8,
	"pluginsConfig": {
		"@nx/js": {
			"projectsAffectedByDependencyUpdates": "auto"
		}
	},
	"neverConnectToCloud": true,
	"sync": {
		"applyChanges": true
	},
	"useDaemonProcess": false
}
