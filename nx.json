{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"namedInputs": {
		"default": [
			"{projectRoot}/**",
			"!{projectRoot}/dist/**",
			"!{projectRoot}/node_modules/**",
			"!{projectRoot}/coverage/**"
		]
	},
	"namedOutputs": {
		"dist": [
			"{projectRoot}/dist"
		]
	},
	"targetDefaults": {
		"build": {
			"dependsOn": [
				"^build",
				"@prosopo/config:build"
			],
			"cache": true
		},
		"build:cjs": {
			"dependsOn": [
				"^build:cjs",
				"@prosopo/config:build"
			],
			"cache": true
		},
		"bundle": {
			"dependsOn": [
				"^build",
				"^bundle",
				"@prosopo/config:build"
			],
			"cache": true
		},
		"bundle:webpack": {
			"dependsOn": [
				"^build:cjs",
				"^bundle:webpack",
				"@prosopo/config:build"
			],
			"cache": true
		},
		"test": {
			"dependsOn": [
				"@prosopo/config:build"
			],
			"cache": true
		},
		"typecheck": {
			"dependsOn": [
				"^typecheck",
				"@prosopo/config:build"
			],
			"cache": true
		},
		"lint": {
			"dependsOn": [
				"@prosopo/config:build"
			],
			"cache": true
		}
	},
	"defaultBase": "main",
	"release": {
		"projects": [
			"*"
		],
		"versionPlans": true,
		"projectsRelationship": "independent",
		"changelog": {
			"projectChangelogs": true,
			"automaticFromRef": true
		}
	},
	"parallel": 8,
	"pluginsConfig": {
		"@nx/js": {
			"projectsAffectedByDependencyUpdates": "auto"
		}
	},
	"plugin": "@nx/js",
	"neverConnectToCloud": true,
	"useDaemonProcess": false
}