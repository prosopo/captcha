{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"namedInputs": {
		"default": [
			"{projectRoot}/**",
			"!{projectRoot}/dist/**",
			"!{projectRoot}/node_modules/**",
			"!{projectRoot}/coverage/**"
		]
	},
	"namedOutputs": {
		"dist": ["{projectRoot}/dist"]
	},
	"targetDefaults": {
		"build": {
			"dependsOn": ["^{target}", "@prosopo/config:build"],
			"cache": true
		},
		"build:cjs": {
			"dependsOn": ["^{target}", "@prosopo/config:build"],
			"cache": true
		},
		"bundle": {
			"dependsOn": ["^build", "^{target}", "@prosopo/config:build"],
			"cache": true
		},
		"bundle:webpack": {
			"dependsOn": ["^build:cjs", "^{target}", "@prosopo/config:build"],
			"cache": true
		},
		"test": {
			"dependsOn": ["@prosopo/config:build"],
			"cache": true
		},
		"typecheck": {
			"dependsOn": ["^{target}", "@prosopo/config:build"],
			"cache": true
		},
		"lint": {
			"dependsOn": ["@prosopo/config:build"],
			"cache": true
		}
	},
	"defaultBase": "main",
	"release": {
		"projects": ["*"],
		"versionPlans": true,
		"projectsRelationship": "independent",
		"changelog": {
			"projectChangelogs": true,
			"automaticFromRef": true
		}
	},
	"parallel": 8,
	"pluginsConfig": {
		"@nx/js": {
			"projectsAffectedByDependencyUpdates": "auto"
		}
	},
	"plugin": "@nx/js/typescript",
	"options": {
		"typecheck": {
			"targetName": "typecheck"
		}
	},
	"neverConnectToCloud": true,
	"sync": {
		"applyChanges": true
	},
	"useDaemonProcess": false
}
