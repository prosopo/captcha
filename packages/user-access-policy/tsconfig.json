{
    "extends": "../../tsconfig.esm.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "#policy/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json",
        "src/**/*.d.ts"
    ],
    "references": [
        {
            "path": "../common"
        },
        {
            "path": "../types"
        },
        {
            "path": "../api-route"
        },
        {
            "path": "../util"
        }
    ]
}