{
    "name": "@prosopo/provider",
    "version": "0.3.38",
    "author": "PROSOPO LIMITED <info@prosopo.io>",
    "license": "Apache-2.0",
    "main": "./dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=18",
        "npm": ">=9"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/cjs/index.cjs"
        }
    },
    "scripts": {
        "clean": "tsc --build --clean",
        "build": "tsc --build --verbose tsconfig.json",
        "build:cjs": "npx vite --config vite.cjs.config.ts build",
        "build:debug": "tsc --build --verbose",
        "build:config": "tsc --project",
        "test": "npx vitest run --config ./vite.test.config.ts",
        "mnemonic": "ts-node ./scripts/generateMnemonic.ts",
        "coverage": "npx c8 npm run test",
        "eslint": "npx eslint . --no-error-on-unmatched-pattern --ignore-path ../../.eslintignore",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "npx prettier . --check --no-error-on-unmatched-pattern --ignore-path ../../.eslintignore",
        "prettier:fix": "npm run prettier -- --write",
        "lint": "npm run eslint && npm run prettier",
        "lint:fix": "npm run eslint:fix && npm run prettier:fix"
    },
    "dependencies": {
        "@polkadot/api": "10.13.1",
        "@polkadot/keyring": "12.6.2",
        "@polkadot/types": "10.13.1",
        "@polkadot/util": "12.6.2",
        "@polkadot/util-crypto": "12.6.2",
        "@prosopo/captcha-contract": "0.3.38",
        "@prosopo/common": "0.3.38",
        "@prosopo/config": "0.3.38",
        "@prosopo/contract": "0.3.38",
        "@prosopo/database": "0.3.38",
        "@prosopo/datasets": "0.3.38",
        "@prosopo/env": "0.3.38",
        "@prosopo/tx": "0.3.38",
        "@prosopo/types": "0.3.38",
        "@prosopo/types-database": "0.3.38",
        "@prosopo/types-env": "0.3.38",
        "cron": "^2.1.0",
        "cron-parser": "^4.5.0",
        "express": "^4.18.1",
        "jsonwebtoken": "^9.0.1",
        "yargs": "^17.5.1",
        "yargs-parser": "^21.0.1"
    },
    "devDependencies": {
        "@types/chai-as-promised": "^7.1.5",
        "@types/fs-extra": "^9.0.13",
        "@types/node": "^18.0.6",
        "@types/sinon": "^10.0.15",
        "@types/yargs": "^17.0.10",
        "c8": "^7.11.3",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "dotenv": "^16.0.1",
        "fs-extra": "^10.1.0",
        "sinon": "^15.2.0",
        "tslib": "2.6.2",
        "typescript": "5.1.6"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/prosopo/provider.git"
    },
    "description": "The easiest way to deploy the Prosopo contract and run the Provider node is via the [captcha repository](https://github.com/prosopo/captcha/).",
    "bugs": {
        "url": "https://github.com/prosopo/captcha/issues"
    },
    "homepage": "https://github.com/prosopo/captcha#readme",
    "sideEffects": false
}
