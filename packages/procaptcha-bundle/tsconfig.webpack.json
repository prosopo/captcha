{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "esnext",

    },
    "swc": true,
    "exclude": [
      "node_modules",
      "dist",
    ]
  },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}
