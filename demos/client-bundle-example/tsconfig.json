{
    "extends": "../../tsconfig.esm.json",
    "compilerOptions": {
        "lib": [
            "ES2021",
            "dom"
        ],
        "types": [
            "node"
        ],
        "noEmit": true,
        "noEmitOnError": true,
        "sourceMap": false
    },
    "include": [
        "**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json",
        "src/**/*.d.ts"
    ],
    "references": [
        {
            "path": "../../packages/dotenv"
        }
    ]
}